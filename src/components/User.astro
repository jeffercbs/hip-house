---
import SignOut from './SignOut.astro';

const { props } = Astro;
---

<div
  class="flex border-2 relative border-orange-900 rounded-lg py-2 px-4 my-3 shadow-lg"
>
  <img
    src={props.user.image}
    width="80"
    height="80"
    alt={props.user.name}
    class="rounded-full"
  />
  <div class="flex-1 flex flex-col justify-center ml-3">
    <h2 class="text-lg underline leading-5">{props.user.name}</h2>
    <span class="opacity-50">{props.user.email}</span>
  </div>
  <SignOut class="absolute md:-right-4 -right-2 -top-5" />
</div>
