---
import Profile from "./Profile.astro";
import MenuMobile from "./MenuMobile.astro";
---

<header class="w-full h-fit py-2 px-1 border-b border-stone-300">
  <nav class="size-full flex md:justify-end justify-between items-center">
    <button id="mobile-menu-toggle" role="menu" class="md:hidden flex z-30">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
    <Profile />
  </nav>
  <MenuMobile />
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const toggle = document.getElementById("mobile-menu-toggle");
    const menu = document.getElementById("mobile-menu");

    if (!toggle || !menu) return;

    toggle.addEventListener("click", () => {
      menu.classList.toggle("-translate-y-full");
      document.body.classList.toggle("overflow-hidden");
    });
  });
</script>
